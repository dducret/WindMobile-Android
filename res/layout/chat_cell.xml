<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:background="@drawable/chat_cell" android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="4dp" android:paddingRight="10dp" android:paddingTop="7dp" android:paddingBottom="7dp">

    <TextView android:id="@+id/pseudo" android:textColor="#000000" android:textStyle="bold"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <TextView android:id="@+id/date" android:textColor="#000000" android:layout_toRightOf="@id/pseudo"
        android:layout_alignBaseline="@id/pseudo" android:gravity="right" android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/text" android:textColor="#000000" android:layout_below="@id/pseudo"
        android:layout_width="match_parent" android:layout_height="match_parent" />
</RelativeLayout>