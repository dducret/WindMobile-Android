<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/chat_cell"
    android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="4dp"
    android:paddingRight="10dp" android:paddingTop="7dp" android:paddingBottom="7dp">

    <TextView android:id="@+id/pseudo" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="#000000" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:textStyle="bold" android:textSize="15dp" />
    <ImageView android:id="@+id/avatar" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/pseudo" android:layout_alignParentLeft="true" />
    <TextView android:id="@+id/date" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textColor="#000000" android:layout_toRightOf="@id/pseudo" android:layout_alignBaseline="@id/pseudo"
        android:gravity="right" android:textSize="13dp" android:textStyle="italic" />
    <TextView android:id="@+id/text" android:layout_width="match_parent" android:layout_height="match_parent"
        android:textColor="#000000" android:layout_toRightOf="@id/avatar" android:layout_alignTop="@id/avatar"
        android:paddingLeft="6dp" android:textSize="15dp" />

</RelativeLayout>